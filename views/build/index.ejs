<div class="container-fluid build-index">
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-12">
          <h2>Troops</h2>
        </div>
      </div>
      <div class="row">
        <% for (var i = 0; i < troops.length; ++i) { %>
          <div class="col-lg-1 col-md-12 <%= i === 0 ? 'col-md-offset-1' : '' %>">
            <%= troops[i].level %>
            <input type="number" name="troop<%= troops[i].level %>" value="0">
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-12">
          <h2>Barracks</h2>
        </div>
      </div>
      <div class="row">
        <% for (var i = 0; i < barracks.length; ++i) { %>
          <div class="col-lg-1 col-md-12 <%= i === 0 ? 'col-md-offset-1' : '' %>">
            <%= barracks[i].level %>
            <input type="number" name="barrack<%= troops[i].level %>" value="0">
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
