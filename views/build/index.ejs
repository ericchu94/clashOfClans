<div class="build-index">
  <div class="row troops">
    <div class="col-lg-2 col-md-12">
      <h2>Troops</h2>
    </div>
    <% for (var i = 0; i < troops.length; ++i) { %>
      <div class="col-lg-1 col-md-12">
        <div class="row">
          <div class="col-lg-12">
            <h4><%= troops[i].name %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <input type="number" data-level="<%= troops[i].level %>" value="0" class="form-control">
          </div>
        </div>
      </div>
    <% } %>
  </div>
  <div class="row add-barracks">
    <div class="col-lg-12">
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          Add barracks <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <% for (var i = 0; i < barracks.length; ++i) { %>
            <li><a href="#" data-level="<%= barracks[i].level %>">Level <%= barracks[i].level %></a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</div>
