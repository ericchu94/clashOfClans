<div class="container-fluid build-index">
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-2 col-md-12">
          <h2>Troops</h2>
        </div>
        <% for (var i = 0; i < troops.length; ++i) { %>
          <div class="col-lg-1 col-md-12">
            <div class="row">
              <div class="col-lg-12">
                <h3><%= troops[i].name %></h3>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <input type="number" name="troop<%= troops[i].level %>" value="0" class="form-control">
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-2 col-md-12">
          <h2>Barracks</h2>
        </div>
        <% for (var i = 0; i < barracks.length; ++i) { %>
          <div class="col-lg-1 col-md-12">
            <div class="row">
              <div class="col-lg-12">
                <%= barracks[i].level %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                0
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
